<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thankyoumessage"
    tools:context=".ResultActivity">


    <TextView
        android:id="@+id/result_tv_total_question"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#ed78ed"
        android:text="Total Question = "
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="15dp"

        />
    <TextView
        android:id="@+id/result_tv_correct_answer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#ed78ed"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/result_tv_total_question"
        android:text="Correct Answer = "
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"

        />
    <TextView
        android:id="@+id/result_tv_incorrect_answer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#ed78ed"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/result_tv_correct_answer"
        android:text="Incorrect Answer = "
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"

        />

    <TextView
        android:id="@+id/result_tv_total_question_option"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/result_tv_total_question"
        android:text="10"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:background="#05eafa"/>

    <TextView
        android:id="@+id/result_tv_correct_answer_option"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/result_tv_correct_answer"
        android:text="10"
        android:textStyle="bold"
        android:layout_below="@id/result_tv_total_question_option"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="#05eafa"/>


    <TextView
        android:id="@+id/result_tv_incorrect_answer_option"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/result_tv_incorrect_answer"
        android:text="10"
        android:textStyle="bold"
        android:layout_below="@id/result_tv_correct_answer_option"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="#05eafa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/result_tv_incorrect_answer"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/result_activity_btn_play_again"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Play again"
            android:background="#ff4400"
            android:textSize="24sp"
            android:layout_margin="5dp"
         />

        <Button
            android:id="@+id/result_activity_btn_log_out"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Sign Out"
            android:layout_margin="5dp"
            android:background="#ff4400"
            android:textSize="24sp"
          />
    </LinearLayout>

</RelativeLayout>